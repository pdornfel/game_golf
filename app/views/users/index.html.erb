      <table>
        <thead>
          <tr>
            <th width='125'>User</th>
            <th width='200'>Total Earnings To Date</th>
            <th width='200'>Picks/Tournaments</th>
            <th width='200'>Last Earnings Update</th>
            <th width='100'></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= user.full_name %></td>
            <td><%= user.earnings_formatted %></td>
            <td><%= "#{user.picks.count}/#{Tournament.all_2015.count}" %></td>
            <td><%= user.earnings_updated_at_formatted %></td>
            <% if current_user == user %>
              <td><%= link_to("View My Picks", user_path(user)) %></td>
            <% else %>
              <td></td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
  